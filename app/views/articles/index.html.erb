<div class="articles-header">
  <h1>Articles</h1>
  <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
</div>

<div class="articles-grid">
  <% @articles.each do |article| %>
    <%= link_to article_path(article), class: "article-card-link" do %>
      <article class="article-card">
        <div class="card-content">
          <div class="article-main">
            <div class="article-meta">
              <% if article.category.present? %>
                <span class="category-tag"><%= article.category %></span>
              <% end %>
              <% if article.tags.any? %>
                <div class="tags">
                  <% article.tags.each do |tag| %>
                    <span class="tag"><%= tag %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <h2 class="article-title">
              <%= article.title %>
            </h2>
            
            <div class="article-excerpt">
              <%= simple_format(article.excerpt) %>
            </div>
          </div>
          
          <% if article.image.attached? %>
            <div class="article-image-sidebar">
              <%= image_tag article.image, class: "sidebar-image" %>
            </div>
          <% end %>
        </div>
      </article>
    <% end %>
  <% end %>
</div>

<% if @articles.empty? %>
  <div class="empty-state">
    <h3>No articles yet</h3>
    <p>Be the first to share something with your group!</p>
    <%= link_to "Create the first article", new_article_path, class: "btn btn-primary" %>
  </div>
<% end %>

<style>
  body {
    background: #1a1a1a;
    color: #c0c0c0;
    font-family: 'Courier New', monospace;
  }

  .articles-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    padding: 15px 20px;
    background: #2a2a2a;
    border: 2px solid #4a4a4a;
    border-radius: 8px;
    border-bottom: 3px solid #8b4513;
  }

  .articles-header h1 {
    margin: 0;
    color: #c0c0c0;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 1.8em;
  }

  .articles-grid {
    display: grid;
    gap: 20px;
  }

  .article-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .article-card {
    background: #2a2a2a;
    padding: 20px;
    border: 2px solid #4a4a4a;
    border-radius: 8px;
    transition: border-color 0.3s, transform 0.2s;
    cursor: pointer;
  }

  .article-card:hover {
    border-color: #8b4513;
    transform: translateY(-2px);
  }

  .card-content {
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }

  .article-main {
    flex: 1;
    min-width: 0;
  }

  .article-image-sidebar {
    flex-shrink: 0;
    width: 250px;
  }

  .sidebar-image {
    width: 250px;
    height: auto;
    border-radius: 4px;
    border: 2px solid #4a4a4a;
  }

  .article-meta {
    display: flex;
    gap: 10px;
    margin-bottom: 15px;
    flex-wrap: wrap;
  }

  .category-tag {
    background: #8b4513;
    color: #ffffff;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.8em;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .tag {
    background: #3a3a3a;
    color: #c0c0c0;
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 0.75em;
    border: 1px solid #555;
  }

  .article-title {
    margin: 0 0 15px 0;
    font-size: 1.4em;
    line-height: 1.3;
    color: #c0c0c0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .article-excerpt {
    color: #a0a0a0;
    line-height: 1.5;
    margin-bottom: 0;
  }

  .empty-state {
    text-align: center;
    padding: 50px 20px;
    background: #2a2a2a;
    border: 2px solid #4a4a4a;
    border-radius: 8px;
    margin-top: 20px;
  }

  .empty-state h3 {
    margin-bottom: 15px;
    color: #c0c0c0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .empty-state p {
    color: #888;
    margin-bottom: 20px;
  }

  .btn {
    padding: 10px 18px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9em;
    border: 2px solid;
    cursor: pointer;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: inline-block;
    font-family: 'Courier New', monospace;
  }

  .btn-primary {
    background: #8b4513;
    color: #ffffff;
    border-color: #654321;
  }

  .btn-primary:hover {
    background: #a0522d;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .articles-header {
      flex-direction: column;
      gap: 15px;
      align-items: flex-start;
    }
    
    .card-content {
      flex-direction: column;
    }
    
    .article-image-sidebar {
      width: 100%;
    }
    
    .sidebar-image {
      width: 100%;
    }
    
    .article-title {
      font-size: 1.2em;
    }
  }
</style>
<div class="feed-container">
  <h1>Game Feed</h1>
  
  <div id="messages" class="messages-container">
    <% @messages.each do |message| %>
      <%= render 'message', message: message %>
    <% end %>
  </div>
  
  <div class="message-form">
    <%= form_with model: @message, url: messages_path, local: false do |form| %>
      <div class="form-group">
        <%= form.select :player_id, 
            options_from_collection_for_select(@players, :id, :name), 
            { prompt: "Select player" },
            { class: "player-select" } %>
      </div>
      
      <div class="form-group">
        <%= form.text_area :content, 
            placeholder: "Type your message...", 
            class: "message-input",
            rows: 2 %>
      </div>
      
      <%= form.submit "Send", class: "send-button" %>
    <% end %>
  </div>

  <!-- Dice Rolling Section -->
  <%= render 'dice_form', players: @players %>
</div>

<style>
  .feed-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .messages-container {
    height: 500px;
    overflow-y: auto;
    border: 1px solid #ddd;
    padding: 10px;
    margin-bottom: 20px;
    background: #f9f9f9;
  }
  
  .message {
    margin-bottom: 15px;
    padding: 10px;
    background: white;
    border-radius: 5px;
  }
  
  .message-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
    color: #666;
    font-size: 0.9em;
  }
  
  .message-form {
    display: flex;
    gap: 10px;
    align-items: flex-end;
    margin-bottom: 20px;
  }
  
  .player-select {
    padding: 5px;
  }
  
  .message-input {
    flex: 1;
    padding: 5px;
  }
  
  .send-button {
    padding: 5px 20px;
  }

  /* Dice Rolling Styles */
  .dice-section {
    border: 2px solid #e67e22;
    border-radius: 8px;
    padding: 15px;
    background: #fdf2e7;
  }

  .dice-section h3 {
    margin: 0 0 15px 0;
    color: #d35400;
  }

  .dice-controls {
    display: flex;
    gap: 15px;
    align-items: center;
    flex-wrap: wrap;
  }

  .dice-type-group {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .dice-count .dice-input {
    width: 50px;
    padding: 5px;
    text-align: center;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .dice-buttons {
    display: flex;
    gap: 5px;
  }

  .dice-button {
    padding: 8px 12px;
    background: #e67e22;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
  }

  .dice-button:hover {
    background: #d35400;
  }

  .modifier-group {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .modifier-group label {
    font-weight: bold;
    color: #d35400;
  }

  .modifier-input {
    width: 60px;
    padding: 5px;
    text-align: center;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
</style>
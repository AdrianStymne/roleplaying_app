<div class="feed-container">
  <h1>Game Feed</h1>
  
  <div id="messages" class="messages-container">
    <% @messages.each do |message| %>
      <%= render 'message', message: message %>
    <% end %>
  </div>
  
  <div class="message-form">
    <%= form_with model: @message, url: messages_path, local: false do |form| %>
      <div class="form-group">
        <%= form.select :player_id, 
            options_from_collection_for_select(@players, :id, :name), 
            { prompt: "Select player" },
            { class: "player-select" } %>
      </div>
      
      <div class="form-group">
        <%= form.text_area :content, 
            placeholder: "Type your message...", 
            class: "message-input",
            rows: 2 %>
      </div>
      
      <%= form.submit "Send", class: "send-button" %>
    <% end %>
  </div>
</div>

<style>
  .feed-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .messages-container {
    height: 500px;
    overflow-y: auto;
    border: 1px solid #ddd;
    padding: 10px;
    margin-bottom: 20px;
    background: #f9f9f9;
  }
  
  .message {
    margin-bottom: 15px;
    padding: 10px;
    background: white;
    border-radius: 5px;
  }
  
  .message-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
    color: #666;
    font-size: 0.9em;
  }
  
  .message-form {
    display: flex;
    gap: 10px;
    align-items: flex-end;
  }
  
  .player-select {
    padding: 5px;
  }
  
  .message-input {
    flex: 1;
    padding: 5px;
  }
  
  .send-button {
    padding: 5px 20px;
  }
</style>
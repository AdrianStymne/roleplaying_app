<div class="players-container">
  <div class="page-header">
    <h1>Players</h1>
    <%= link_to "Add New Player", new_player_path, class: "btn btn-primary" %>
  </div>

  <div class="players-grid">
    <% @players.each do |player| %>
      <div class="player-card">
        <h3><%= link_to player.name, player %></h3>
        <div class="player-status">
          <span class="status-badge <%= player.active? ? 'active' : 'inactive' %>">
            <%= player.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>
        <div class="player-stats">
          <p><%= pluralize(player.messages.count, 'message') %></p>
        </div>
        <div class="player-actions">
          <%= link_to "View", player, class: "btn btn-sm" %>
          <%= link_to "Edit", edit_player_path(player), class: "btn btn-sm" %>
          <%= link_to "Delete", player, method: :delete, 
              data: { confirm: "Are you sure?" }, 
              class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  body {
    background: #1a1a1a;
    color: #c0c0c0;
    font-family: 'Courier New', monospace;
  }

  .players-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    padding: 20px;
    background: #2a2a2a;
    border: 2px solid #4a4a4a;
    border-radius: 8px;
    border-bottom: 3px solid #8b4513;
  }

  .page-header h1 {
    margin: 0;
    color: #c0c0c0;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 1.8em;
  }

  .players-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
  }

  .player-card {
    background: #2a2a2a;
    padding: 20px;
    border: 2px solid #4a4a4a;
    border-radius: 8px;
    border-left: 4px solid #8b4513;
    transition: border-color 0.3s, transform 0.2s;
  }

  .player-card:hover {
    transform: translateY(-3px);
    border-color: #8b4513;
    border-left-color: #cd853f;
  }

  .player-card h3 {
    margin-top: 0;
    margin-bottom: 15px;
  }

  .player-card h3 a {
    color: #c0c0c0;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1.1em;
  }

  .player-card h3 a:hover {
    color: #cd853f;
  }

  .player-status {
    margin-bottom: 15px;
  }

  .status-badge {
    display: inline-block;
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 0.8em;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .status-badge.active {
    background: #2a4a2a;
    color: #90ee90;
    border: 1px solid #4a8a4a;
  }

  .status-badge.inactive {
    background: #4a2a2a;
    color: #ff6b6b;
    border: 1px solid #8a4a4a;
  }

  .player-stats {
    margin: 15px 0;
    color: #888;
    font-size: 0.9em;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .player-stats p {
    margin: 0;
  }

  .player-actions {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 8px 14px;
    text-decoration: none;
    border-radius: 4px;
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Courier New', monospace;
    border: 2px solid;
  }

  .btn-primary {
    background: #8b4513;
    color: #ffffff;
    border-color: #654321;
  }

  .btn-primary:hover {
    background: #a0522d;
  }

  .btn-sm {
    padding: 6px 12px;
    font-size: 0.8em;
    background: #4a4a4a;
    color: #c0c0c0;
    border-color: #555;
  }

  .btn-sm:hover {
    background: #555;
  }

  .btn-danger {
    background: #8b2635;
    color: #ffffff;
    border-color: #5a1a20;
  }

  .btn-danger:hover {
    background: #a0293a;
  }

  /* Empty state for when no players exist */
  .empty-state {
    text-align: center;
    padding: 50px 20px;
    background: #2a2a2a;
    border: 2px solid #4a4a4a;
    border-radius: 8px;
    margin-top: 20px;
  }

  .empty-state h3 {
    margin-bottom: 15px;
    color: #c0c0c0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .empty-state p {
    color: #888;
    margin-bottom: 20px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .players-container {
      padding: 15px;
    }
    
    .page-header {
      flex-direction: column;
      gap: 15px;
      align-items: flex-start;
    }
    
    .page-header h1 {
      font-size: 1.5em;
    }
    
    .players-grid {
      grid-template-columns: 1fr;
    }
    
    .player-actions {
      justify-content: space-between;
    }
    
    .btn-sm {
      flex: 1;
      padding: 8px 12px;
    }
  }

  @media (max-width: 480px) {
    .player-actions {
      flex-direction: column;
    }
    
    .btn-sm {
      width: 100%;
    }
  }
</style>